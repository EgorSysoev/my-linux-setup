# Loads my personal aliases.
if [ -f ~/.my_bashrc_personal ]; then
	. ~/.my_bashrc_personal
fi
# Loads useful public aliases.
if [ -f ~/.my_bash_aliases ]; then
	. ~/.my_bash_aliases
fi

# Keyboard layouts with additional keybindings, see README.md.
alias us='setxkbmap -layout us; xmodmap ~/.Xmodmapus'
alias usvi='setxkbmap -layout us; xmodmap ~/.Xmodmapusvi'
alias si='setxkbmap -layout si; xmodmap ~/.Xmodmapsi'

# Syntax highligh for less
export LESSOPEN="| /usr/share/source-highlight/src-hilite-lesspipe.sh %s"
export LESS=' -R '


###################################################
# ALIASES FOR EASY AND QUICK ACCESS TO THE FILES: #
#  .bashrc,  .bash_aliases,  WTF MAN, and  TOD0   #
###################################################

# Location of text file with useful unix command descriptions.
export MAN="$HOME/Desktop/WTF-MAN"
# Location of text file with general configuration and instalation instructions.
export INS="$HOME/Desktop/INS"
# Location of TOD0 text file.
export TODO="$HOME/Desktop/TODO"

# Opens file in less.
alias m1='m "$MAN"'
alias m2='m $HOME/.my_bash_aliases'
alias m3='m $HOME/.my_bashrc'
alias m4='m "$INS"'
alias m5='m "$TODO"'
# Opens file in nano.
alias n1='nano "$MAN"'
alias n2='nano $HOME/.my_bash_aliases'
alias n3='nano $HOME/.my_bashrc'
alias n4='nano "$INS"'
alias n5='nano "$TODO"'
alias nnn='nano "$MAN" $HOME/.my_bash_aliases $HOME/.my_bashrc "$TODO"'
# Opens file in vim.
alias v1='v "$MAN"'
alias v2='v $HOME/.my_bash_aliases'
alias v3='v $HOME/.my_bashrc'
alias v4='v $"$INS"'
alias v5='v "$TODO"'
# Opens file in gedit.
alias g1='g "$MAN" &'
alias g2='g $HOME/.my_bash_aliases &'
alias g3='g $HOME/.my_bashrc &'
alias g4='g $"$INS"'
alias g5='g "$TODO" &'
alias ggg='gedit "$MAN" $HOME/.my_bash_aliases "$TODO" &'
# Greps file for passed phrase.
alias c1='m1 | c | gr'
alias c2='m2 | c | gr'
alias c3='m3 | c | gr'
alias c4='m4 | c | gr'
alias c5='m5 | c | gr'

# Append line to TOD0 file. 
alias zt='ztodo'
ztodo() {
    echo "$@" >> "$TODO"
}
# Append line to MAN file.
zhud() {
    echo "$@" >> "$MAN"
}

alias tz='tail "$TODO"'
